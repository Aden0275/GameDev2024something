<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>100 Buttons Page</title>
    <style>
        button {
            margin: 5px;
            padding: 10px 20px;
            font-size: 16px;
        }
        .container {
            display: flex;
            flex-wrap: wrap;
            width: 500px; /* Adjust width as needed */
        }
    </style>
</head>
<body>
    <h1>100 Buttons</h1>
    <div class="container">
        <!-- Loop to create 100 buttons -->
        <script>
            for (let i = 1; i <= 100; i++) {
                document.write(`<button onclick="handleButtonClick(${i})">Button ${i}</button>`);
            }
        </script>
    </div>

    <script>
        function handleButtonClick(num) {
            if (num === 50) {
                window.location.href = 'wow.html'; // Redirect to the wow page
            } else {
                alert(`You clicked Button ${num}`);
            }
        }
    </script>
</body>
</html>
