<body>

    <h1>Aden Decision Maker</h1>

    <label for="myText1">Input Name:</label>
    <input type="text" id="myText1" value="Aden">

    <label for="myNum1">Input Number:</label>
    <input type="number" id="myNum1" value="14">

    <div id="myDiv01">...</div>

    <input type="button" value="Check if Name is Aden" onclick="checkName('Aden')">
    <input type="button" value="Check Name with Else" onclick="checkNameElse('Aden')">

    <script>
        function checkName(expectedName) {
            let myIn1 = document.getElementById('myText1').value;
            document.getElementById('myDiv01').innerHTML = '<br>';
            if (myIn1 === expectedName) {
                document.getElementById('myDiv01').innerHTML = `Hi ${expectedName}`;
            }
        }

        function checkNameElse(expectedName) {
            let myIn1 = document.getElementById('myText1').value;
            document.getElementById('myDiv01').innerHTML = '<br>';
            if (myIn1 === expectedName) {
                document.getElementById('myDiv01').innerHTML = `Hi ${expectedName}`;
            } else {
                document.getElementById('myDiv01').innerHTML = 'Was expecting Aden >:';
            }
        }
    </script>
    
</body>
